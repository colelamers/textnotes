<style-scheme id="red-rover" _name="Red Rover Contrast" version="1.0">
  <author>Cole</author>
  <_description>Ultra contrast Catppuccin Mocha: true black background, vivid highlights, bright yellow/gold/yellow elements, hot pink strings, cyan comments.</_description>

  <!-- Palette -->
  <color name="rosewater"  value="#f5e0dc"/>
  <color name="sakura"  value="#ff7ad1"/>
  <color name="pink"  value="#ff4099"/> <!-- hot reddish-pink for strings -->
  <color name="brick"  value="#ff7a8c"/>
  <color name="red"  value="#ff0000"/>
  <color name="maroon"  value="#eba0ac"/>
  <color name="yellow2"  value="#ffcb6b"/> <!-- brighter yellow/gold -->
  <color name="yellow"  value="#ffe873"/> <!-- brighter yellow -->
  <color name="limegreen"  value="#02cc38"/>
  <color name="teal"  value="#94e2d5"/>
  <color name="sky"  value="#89dceb"/>
  <color name="sapphire"  value="#74c7ec"/>
  <color name="blue"  value="#89b4fa"/>
  <color name="lavender"  value="#b4befe"/>
  <color name="cyan"  value="#00ffff"/>
  <color name="text"  value="#ffffff"/>  <!-- bright white text -->
  <color name="overlay1"  value="#7f84a0"/>
  <color name="surface0"  value="#61002a"/>
  <color name="base"  value="#000000"/> <!-- true black -->
  <color name="mantle"  value="#000000"/>
  <color name="crust"  value="#000000"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="text" background="base"/>
  <style name="selection"                   foreground="text" background="#2a82ff"/> <!-- vivid highlight -->
  <style name="selection-unfocused"         foreground="text" background="#5555a0"/>
  <style name="cursor"                      foreground="rosewater"/>
  <style name="secondary-cursor"            foreground="rosewater"/>
  <style name="current-line"                background="surface0"/>
  <style name="line-numbers"                foreground="sapphire" background="base"/>
  <style name="background-pattern"          background="mantle"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="limegreen" bold="true"/>
  <style name="bracket-mismatch"            foreground="red" background="base"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="text" background="crust"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="text" background="cyan"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="limegreen"/> 
  <style name="def:shebang"                 foreground="#00cccc" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants and variables -->
  <style name="def:constant"                foreground="yellow" bold="true"/>
  <style name="def:string"                  foreground="pink"/>
  <style name="def:special-char"            foreground="pink" bold="true"/>
  <style name="def:special-constant"        foreground="yellow" bold="true"/>
  <style name="def:number"                  foreground="red" bold="true"/>
  <style name="def:floating-point"          foreground="yellow" bold="true"/>
  <style name="def:boolean"                 foreground="yellow" bold="true"/>
  <style name="def:keyword"                 foreground="sakura" bold="true"/>
  <style name="def:builtin"                 foreground="red" bold="true"/>
  <style name="def:variable"                foreground="maroon" bold="true"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="blue"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="yellow" />

  <!-- Types -->
  <style name="def:type"                    foreground="yellow"/>

  <!-- Operators -->
  <style name="def:operator"                foreground="sky"/>

  <!-- Markup -->
  <style name="def:emphasis"                italic="true"/>
  <style name="def:strong-emphasis"         foreground="yellow" bold="true"/>
  <style name="def:inline-code"             foreground="pink"/>
  <style name="def:insertion"               underline="single"/>
  <style name="def:deletion"                strikethrough="true"/>
  <style name="def:link-text"               foreground="lavender"/>
  <style name="def:link-symbol"             foreground="blue" bold="true"/>
  <style name="def:link-destination"        foreground="blue" italic="true" underline="single"/>
  <style name="def:heading"                 foreground="red" bold="true"/>
  <style name="def:thematic-break"          foreground="yellow" bold="true"/>
  <style name="def:preformatted-section"    foreground="yellow" bold="true"/>
  <style name="def:list-marker"             foreground="teal" bold="true"/>

  <!-- Others -->
  <style name="def:preprocessor"            foreground="sky"/>
  <style name="def:error"                   foreground="red" bold="true"/>
  <style name="def:warning"                 background="yellow" bold="true"/>
  <style name="def:note"                    foreground="lavender" bold="true"/>
  <style name="def:net-address"             foreground="blue" italic="true" underline="single"/>
  <style name="def:underlined"              italic="true" underline="single"/>
  <style name="def:function"                foreground="blue"/>

  <!-- Diff -->
  <style name="diff:location"               foreground="yellow" bold="true"/>
  <style name="diff:changed-line"           foreground="blue"/>
  <style name="diff:added-line"             foreground="limegreen"/>
  <style name="diff:removed-line"           foreground="red"/>
  <style name="diff:special-case"           foreground="yellow" bold="true"/>
</style-scheme>

